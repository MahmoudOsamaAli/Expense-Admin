<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/frag_add_place_locations_rv_ri_popup_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
          app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/search_view_background">

            <ImageView
                android:id="@+id/frag_add_place_locations_rv_ri_popup_country_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/country"
                android:src="@drawable/ic_country_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/frag_add_place_locations_rv_ri_popup_country_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="Egypt"
                app:layout_constraintBottom_toBottomOf="@+id/frag_add_place_locations_rv_ri_popup_country_ic"
                app:layout_constraintStart_toEndOf="@+id/frag_add_place_locations_rv_ri_popup_country_ic"
                app:layout_constraintTop_toTopOf="@+id/frag_add_place_locations_rv_ri_popup_country_ic" />

            <ImageView
                android:id="@+id/frag_add_place_locations_rv_ri_popup_city_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/city"
                android:src="@drawable/ic_location_city_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frag_add_place_locations_rv_ri_popup_country_ic" />

            <TextView
                android:id="@+id/frag_add_place_locations_rv_ri_popup_city_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="Cairo"
                app:layout_constraintBottom_toBottomOf="@+id/frag_add_place_locations_rv_ri_popup_city_ic"
                app:layout_constraintStart_toEndOf="@+id/frag_add_place_locations_rv_ri_popup_city_ic"
                app:layout_constraintTop_toTopOf="@+id/frag_add_place_locations_rv_ri_popup_city_ic" />

            <ImageView
                android:id="@+id/frag_add_place_locations_rv_ri_popup_street_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/city"
                android:src="@drawable/ic_streets_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frag_add_place_locations_rv_ri_popup_city_ic" />

            <TextView
                android:id="@+id/frag_add_place_locations_rv_ri_popup_street_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="13 El Khalifa Al Maa'mon"
                app:layout_constraintBottom_toBottomOf="@+id/frag_add_place_locations_rv_ri_popup_street_ic"
                app:layout_constraintStart_toEndOf="@+id/frag_add_place_locations_rv_ri_popup_street_ic"
                app:layout_constraintTop_toTopOf="@+id/frag_add_place_locations_rv_ri_popup_street_ic" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/frag_add_place_locations_rv_ri_place_ic"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/icons_marker_yellow"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frag_add_place_locations_rv_ri_popup_container" />

    <ImageView
        android:id="@+id/frag_add_place_locations_rv_ri_delete_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_curved_image_background"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="@id/frag_add_place_locations_rv_ri_place_ic"
        app:layout_constraintTop_toTopOf="@id/frag_add_place_locations_rv_ri_place_ic" />
</androidx.constraintlayout.widget.ConstraintLayout>