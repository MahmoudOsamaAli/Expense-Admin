<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_116sdp"
    android:layout_height="@dimen/_120sdp"
    android:layout_margin="@dimen/_8sdp">

    <ImageView
        android:id="@+id/frag_add_place_photos_rv_ri_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/gray_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/frag_add_place_photos_rv_ri_delete_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/custom_curved_image_background"
        android:src="@drawable/ic_close_black_24dp"
        app:layout_constraintEnd_toEndOf="@id/frag_add_place_photos_rv_ri_image_view"
        app:layout_constraintTop_toTopOf="@id/frag_add_place_photos_rv_ri_image_view"
        tools:targetApi="lollipop" />
</androidx.constraintlayout.widget.ConstraintLayout>