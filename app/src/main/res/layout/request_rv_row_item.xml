<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/requests_rv_row_item_user_iv"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_person_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/requests_rv_row_item_user_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:gravity="center_vertical"
        android:text="John Wick"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/requests_rv_row_item_user_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/requests_rv_row_item_date_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:gravity="center_vertical"
        android:text="2 Jun"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/requests_rv_row_item_place_iv"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/icons_place_request_24"
        app:layout_constraintStart_toStartOf="@id/requests_rv_row_item_user_iv"
        app:layout_constraintTop_toBottomOf="@+id/requests_rv_row_item_user_iv" />

    <TextView
        android:id="@+id/requests_rv_row_item_place_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:gravity="center_vertical"
        android:text="MacDonalos Restaurant"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/requests_rv_row_item_place_iv"
        app:layout_constraintTop_toBottomOf="@+id/requests_rv_row_item_user_name_tv" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_12sdp"

        android:background="@color/gray_dark"
        app:layout_constraintTop_toBottomOf="@+id/requests_rv_row_item_place_name_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>